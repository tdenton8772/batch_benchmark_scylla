# CSV File Configuration
CSV_DIR=./data
FILE_GLOB=*.csv
SORT_KEY_COLUMN=sort_key
CSV_HAS_HEADER=true

# Worker Configuration
WORKER_COUNT=3
BATCH_SIZE=100
QUEUE_SIZE=1000
CONCURRENCY=50
QUERY_TIMEOUT_SECS=5
METRICS_INTERVAL_SECS=5

# ScyllaDB Connection
SCYLLA_HOSTS=127.0.0.1
SCYLLA_PORT=19042
SCYLLA_KEYSPACE=content_db
SCYLLA_TABLE=content_data
SCYLLA_USERNAME=
SCYLLA_PASSWORD=
SCYLLA_CONSISTENCY=LOCAL_ONE
LOCAL_DC=aws-us-east-1

# TLS Configuration
TLS_ENABLED=false
TLS_CA_PATH=

# Region (for multi-region deployments)
REGION=local
